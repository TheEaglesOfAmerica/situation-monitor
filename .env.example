# Situation Monitor Environment Variables
# Copy this file to .env and fill in your values

# OpenRouter API Key for AI-powered headline analysis (server-side)
# Get a key at https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your-key-here

# News refresh interval in milliseconds (default: 5 minutes)
NEWS_REFRESH_INTERVAL=300000

# Enable server-side background scraping (runs even without visitors)
ENABLE_BACKGROUND_SCRAPING=true
